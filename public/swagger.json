    "/api/health": {
      "get": {
        "summary": "Health check endpoint",
        "description": "Returns the health status of the Azure Functions service",
        "tags": ["System"],
        "operationId": "getHealth",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                },
                "example": {
                  "status": "healthy",
                  "timestamp": "2025-10-06T20:30:45.123Z",
                  "service": "calendar-be-af",
                  "environment": "development",
                  "version": "1.0.0",
                  "uptime": 3600.5
                }
              }
            }
          }
        }
      }
    },
    "/api/health/version": {
      "get": {
        "summary": "Service version information",
        "description": "Returns detailed version and environment information",
