    "/api/categories": {
      "get": {
        "summary": "List categories",
        "description": "Retrieve a paginated list of event categories for an application",
        "tags": ["Categories"],
        "operationId": "listCategories",
        "parameters": [
          {
            "name": "appId",
            "in": "query",
            "required": true,
            "description": "Application ID (e.g., 'TangoTiempo', 'HarmonyJunction')",
            "schema": {
              "type": "string"
            },
            "example": "TangoTiempo"
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number (0-indexed)",
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of items per page",
            "schema": {
              "type": "integer",
              "default": 50,
              "minimum": 1,
              "maximum": 100
            }
          },
          {
            "name": "fields",
            "in": "query",
            "description": "Comma-separated list of fields to include",
            "schema": {
              "type": "string"
            },
            "example": "_id,categoryName,categorySlug"
          }
        ],
        "responses": {
          "200": {
            "description": "Categories retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CategoriesResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
