{
  "openapi": "3.0.0",
  "info": {
    "title": "Calendar Backend - Azure Functions API",
    "version": "1.0.0",
    "description": "Azure Functions API for Master Calendar (TangoTiempo & HarmonyJunction). Migrating from Express to serverless architecture.",
    "contact": {
      "name": "API Support",
      "email": "toby.balsley@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:7071",
      "description": "Local Development"
    },
    {
      "url": "https://calendarbe-test-bpg5caaqg5chbndu.eastus-01.azurewebsites.net",
      "description": "Azure TEST Environment"
    },
    {
      "url": "https://CalendarBEAF-PROD.azurewebsites.net",
      "description": "Azure PROD Environment"
    }
  ],
  "tags": [
    {
      "name": "System",
      "description": "Health checks and system monitoring"
    },
    {
      "name": "Observability",
      "description": "Logs, metrics, and monitoring endpoints"
    },
    {
      "name": "Categories",
      "description": "Event categories management"
    },
    {
      "name": "Roles",
      "description": "User roles and permissions"
    },
    {
      "name": "Calendars",
      "description": "Calendar CRUD operations"
    },
    {
      "name": "Events",
      "description": "Calendar events management"
    }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "summary": "Health check endpoint",
        "description": "Returns the health status of the Azure Functions service",
        "tags": ["System"],
        "operationId": "getHealth",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                },
                "example": {
                  "status": "healthy",
                  "timestamp": "2025-10-06T20:30:45.123Z",
                  "service": "calendar-be-af",
                  "environment": "development",
                  "version": "1.0.0",
                  "uptime": 3600.5
                }
              }
            }
          }
        }
      }
    },
    "/api/metrics": {
      "get": {
        "summary": "Get metrics summary",
        "description": "Returns API usage metrics including request counts, response times, and error rates",
        "tags": ["Observability"],
        "operationId": "getMetrics",
        "responses": {
          "200": {
            "description": "Metrics retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MetricsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/categories": {
      "get": {
        "summary": "List categories",
        "description": "Retrieve a paginated list of event categories for an application",
        "tags": ["Categories"],
        "operationId": "listCategories",
        "parameters": [
          {
            "name": "appId",
            "in": "query",
            "required": true,
            "description": "Application ID (e.g., 'TangoTiempo', 'HarmonyJunction')",
            "schema": {
              "type": "string"
            },
            "example": "TangoTiempo"
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number (0-indexed)",
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of items per page",
            "schema": {
              "type": "integer",
              "default": 50,
              "minimum": 1,
              "maximum": 100
            }
          },
          {
            "name": "fields",
            "in": "query",
            "description": "Comma-separated list of fields to include",
            "schema": {
              "type": "string"
            },
            "example": "_id,categoryName,categorySlug"
          }
        ],
        "responses": {
          "200": {
            "description": "Categories retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CategoriesResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/roles": {
      "get": {
        "summary": "List roles",
        "description": "Retrieve a list of user roles for an application",
        "tags": ["Roles"],
        "operationId": "listRoles",
        "parameters": [
          {
            "name": "appId",
            "in": "query",
            "required": true,
            "description": "Application ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Roles retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RolesResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/calendars": {
      "get": {
        "summary": "List calendars",
        "description": "Retrieve all calendars",
        "tags": ["Calendars"],
        "operationId": "listCalendars",
        "responses": {
          "200": {
            "description": "Calendars retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Calendar"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create calendar",
        "description": "Create a new calendar",
        "tags": ["Calendars"],
        "operationId": "createCalendar",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CalendarInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Calendar created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Calendar"
                }
              }
            }
          }
        }
      }
    },
    "/api/calendars/{id}": {
      "get": {
        "summary": "Get calendar by ID",
        "description": "Retrieve a single calendar by ID",
        "tags": ["Calendars"],
        "operationId": "getCalendar",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Calendar ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Calendar retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Calendar"
                }
              }
            }
          },
          "404": {
            "description": "Calendar not found"
          }
        }
      },
      "put": {
        "summary": "Update calendar",
        "description": "Update an existing calendar",
        "tags": ["Calendars"],
        "operationId": "updateCalendar",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Calendar ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CalendarInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Calendar updated successfully"
          }
        }
      },
      "delete": {
        "summary": "Delete calendar",
        "description": "Delete a calendar by ID",
        "tags": ["Calendars"],
        "operationId": "deleteCalendar",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Calendar ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Calendar deleted successfully"
          }
        }
      }
    },
    "/api/calendars/{calendarId}/events": {
      "get": {
        "summary": "List events",
        "description": "Retrieve events for a calendar",
        "tags": ["Events"],
        "operationId": "listEvents",
        "parameters": [
          {
            "name": "calendarId",
            "in": "path",
            "required": true,
            "description": "Calendar ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Events retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Event"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create event",
        "description": "Create a new event in a calendar",
        "tags": ["Events"],
        "operationId": "createEvent",
        "parameters": [
          {
            "name": "calendarId",
            "in": "path",
            "required": true,
            "description": "Calendar ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EventInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Event created successfully"
          }
        }
      }
    },
    "/api/calendars/{calendarId}/events/{eventId}": {
      "get": {
        "summary": "Get event by ID",
        "description": "Retrieve a single event",
        "tags": ["Events"],
        "operationId": "getEvent",
        "parameters": [
          {
            "name": "calendarId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "eventId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Event retrieved successfully"
          }
        }
      },
      "put": {
        "summary": "Update event",
        "description": "Update an existing event",
        "tags": ["Events"],
        "operationId": "updateEvent",
        "parameters": [
          {
            "name": "calendarId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "eventId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EventInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Event updated successfully"
          }
        }
      },
      "delete": {
        "summary": "Delete event",
        "description": "Delete an event by ID",
        "tags": ["Events"],
        "operationId": "deleteEvent",
        "parameters": [
          {
            "name": "calendarId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "eventId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Event deleted successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["healthy", "unhealthy"],
            "description": "Health status"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of health check"
          },
          "service": {
            "type": "string",
            "description": "Service name"
          },
          "environment": {
            "type": "string",
            "description": "Environment (development, test, production)"
          },
          "version": {
            "type": "string",
            "description": "API version"
          },
          "uptime": {
            "type": "number",
            "description": "Service uptime in seconds"
          }
        },
        "required": ["status", "timestamp", "service"]
      },
      "MetricsResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "object",
            "properties": {
              "summary": {
                "type": "object",
                "properties": {
                  "totalRequests": {
                    "type": "integer"
                  },
                  "totalErrors": {
                    "type": "integer"
                  },
                  "errorRate": {
                    "type": "string"
                  },
                  "avgResponseTime": {
                    "type": "number"
                  }
                }
              },
              "byFunction": {
                "type": "object",
                "description": "Request counts grouped by function name"
              },
              "byStatusCode": {
                "type": "object",
                "description": "Request counts grouped by HTTP status code"
              },
              "slowestEndpoints": {
                "type": "array",
                "description": "Top 10 slowest endpoints",
                "items": {
                  "type": "object",
                  "properties": {
                    "function": {
                      "type": "string"
                    },
                    "avgDuration": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CategoriesResponse": {
        "type": "object",
        "properties": {
          "categories": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Category"
            }
          },
          "pagination": {
            "$ref": "#/components/schemas/Pagination"
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "Category ID"
          },
          "categoryName": {
            "type": "string",
            "description": "Category display name"
          },
          "categorySlug": {
            "type": "string",
            "description": "URL-friendly slug"
          },
          "categoryDescription": {
            "type": "string",
            "description": "Category description"
          },
          "appId": {
            "type": "string",
            "description": "Application ID"
          },
          "active": {
            "type": "boolean",
            "description": "Active status"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "RolesResponse": {
        "type": "object",
        "properties": {
          "roles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Role"
            }
          }
        }
      },
      "Role": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "roleName": {
            "type": "string"
          },
          "roleSlug": {
            "type": "string"
          },
          "permissions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "appId": {
            "type": "string"
          }
        }
      },
      "Calendar": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CalendarInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["name"]
      },
      "Event": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "format": "date-time"
          },
          "endDate": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "EventInput": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "format": "date-time"
          },
          "endDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["title", "startDate"]
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "total": {
            "type": "integer",
            "description": "Total number of items"
          },
          "page": {
            "type": "integer",
            "description": "Current page number (0-indexed)"
          },
          "limit": {
            "type": "integer",
            "description": "Items per page"
          },
          "pages": {
            "type": "integer",
            "description": "Total number of pages"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Error type"
          },
          "message": {
            "type": "string",
            "description": "Error message"
          },
          "statusCode": {
            "type": "integer",
            "description": "HTTP status code"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
