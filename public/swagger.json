    "/api/mapcenter": {
      "get": {
        "summary": "Get user's map center",
        "description": "Retrieve the authenticated user's saved map center location and search radius",
        "tags": ["User Preferences"],
        "operationId": "getUserMapCenter",
        "security": [
          {
            "firebaseAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Map center retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MapCenterResponse"
                },
                "examples": {
                  "withData": {
                    "summary": "User has saved map center",
                    "value": {
                      "success": true,
                      "data": {
                        "lat": 42.923246,
                        "lng": -73.256836,
                        "zoom": 10,
                        "radiusMiles": 50,
                        "updatedAt": "2025-10-13T20:45:00.000Z"
                      },
                      "timestamp": "2025-10-13T20:45:01.234Z"
                    }
                  },
                  "noData": {
                    "summary": "User has no saved map center",
                    "value": {
                      "success": true,
                      "data": null,
                      "timestamp": "2025-10-13T20:45:01.234Z"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing Firebase token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "error": "Unauthorized - Valid Firebase token required",
                  "timestamp": "2025-10-13T20:45:01.234Z"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Save user's map center",
        "description": "Save the authenticated user's map center location and search radius to MongoDB",
        "tags": ["User Preferences"],
        "operationId": "saveUserMapCenter",
        "security": [
          {
            "firebaseAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MapCenterInput"
              },
              "example": {
                "lat": 42.923246,
                "lng": -73.256836,
                "zoom": 10,
                "radiusMiles": 50
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Map center saved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MapCenterResponse"
                },
                "example": {
                  "success": true,
                  "data": {
                    "lat": 42.923246,
                    "lng": -73.256836,
                    "zoom": 10,
                    "radiusMiles": 50,
                    "updatedAt": "2025-10-13T20:45:00.000Z"
                  },
                  "timestamp": "2025-10-13T20:45:01.234Z"
                }
              }
            }
          },
          "400": {
            "description": "Validation error - Invalid coordinates or parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "error": "\"lat\" must be less than or equal to 90",
                  "timestamp": "2025-10-13T20:45:01.234Z"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing Firebase token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/login-track": {
      "post": {
        "summary": "Track user login",
        "description": "Tracks user login events with IP geolocation data for analytics, heatmaps, and targeted outreach. Captures city-level location data using ipinfo.io.",
        "tags": ["Analytics"],
        "operationId": "trackUserLogin",
        "security": [
          {
            "firebaseAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Login event tracked successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginTrackResponse"
                },
                "example": {
                  "success": true,
                  "data": {
                    "loginId": "507f1f77bcf86cd799439011",
                    "timestamp": "2025-10-15T14:30:00.000Z"
                  },
                  "timestamp": "2025-10-15T14:30:00.123Z"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing Firebase token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "success": false,
                  "error": "Unauthorized - Valid Firebase token required",
                  "timestamp": "2025-10-15T14:30:00.123Z"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/visitor/track": {
      "post": {
        "summary": "Track anonymous visitor",
        "description": "Tracks anonymous visitors on /calendar routes with IP geolocation. Captures once per day per IP to avoid noise. No authentication required.",
        "tags": ["Analytics"],
        "operationId": "trackVisitor",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VisitorTrackInput"
              },
              "example": {
                "page": "/calendar/boston"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Visitor tracked successfully or already tracked today",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VisitorTrackResponse"
                },
                "examples": {
                  "tracked": {
                    "summary": "New visitor tracked",
                    "value": {
                      "success": true,
                      "data": {
                        "tracked": true,
                        "message": "Visitor tracked successfully",
                        "visitId": "507f1f77bcf86cd799439011"
                      },
                      "timestamp": "2025-10-15T14:30:00.123Z"
                    }
                  },
                  "alreadyTracked": {
                    "summary": "Already tracked today",
                    "value": {
                      "success": true,
                      "data": {
                        "tracked": false,
                        "message": "Already tracked today"
                      },
                      "timestamp": "2025-10-15T14:30:00.123Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Unable to determine IP address",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["healthy", "unhealthy"],
            "description": "Health status"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of health check"
          },
          "service": {
            "type": "string",
            "description": "Service name"
          },
          "environment": {
            "type": "string",
            "description": "Environment (development, test, production)"
          },
          "version": {
            "type": "string",
            "description": "API version"
          },
          "uptime": {
            "type": "number",
            "description": "Service uptime in seconds"
          }
        },
        "required": ["status", "timestamp", "service"]
      },
      "VersionResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["healthy"],
            "description": "Health status"
          },
          "version": {
            "type": "string",
            "description": "Application version from package.json"
          },
          "name": {
            "type": "string",
            "description": "Application name"
          },
          "description": {
            "type": "string",
            "description": "Application description"
          },
          "node": {
            "type": "string",
            "description": "Node.js version"
          },
          "azureFunctions": {
            "type": "string",
            "description": "Azure Functions runtime version"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of version check"
          },
          "environment": {
            "type": "object",
            "properties": {
