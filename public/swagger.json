    },
    "/api/health/mongodb": {
      "get": {
        "summary": "MongoDB health check",
        "description": "Verifies connection to default MongoDB database",
        "tags": ["System"],
        "operationId": "getMongoDBHealth",
        "responses": {
          "200": {
            "description": "MongoDB is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MongoDBHealthResponse"
                },
                "example": {
                  "status": "healthy",
                  "environment": "default",
                  "database": "tangotiempo",
                  "connected": true,
                  "responseTime": "45ms",
                  "timestamp": "2025-10-10T03:00:00.000Z"
                }
              }
            }
          },
          "503": {
            "description": "MongoDB is unhealthy or unavailable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MongoDBHealthResponse"
                },
                "example": {
                  "status": "unhealthy",
                  "environment": "default",
                  "error": "Connection timeout",
                  "connected": false,
                  "responseTime": "5001ms",
                  "timestamp": "2025-10-10T03:00:00.000Z"
                }
              }
            }
          }
        }
      }
    },
